<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/guide_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffE12136">
        <RelativeLayout
            android:id="@+id/pagina1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:src="@drawable/guide1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:layout_gravity="center" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pagina2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:src="@drawable/guide2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:layout_gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pagina3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal" >
            <ImageView
                android:src="@drawable/guide3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:layout_gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pagina4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:src="@drawable/guide4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:layout_gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pagina5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:src="@drawable/guide5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:layout_gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/HomeLayout"
            android:gravity="center_vertical|center_horizontal"
            android:background="#ffffffff">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/HomeImage"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:weightSum="4"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:background="#ff000000"
                    android:id="@+id/verano">
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="OPCION
1"
                            android:id="@+id/primaverano"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:singleLine="false"
                            android:textColor="#ffffffff"
                            android:textAlignment="gravity"
                            android:linksClickable="false"
                            android:lines="2"
                            android:password="false"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:textIsSelectable="false" />
                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/home_flecha"
                            android:src="@drawable/home_flecha"
                            android:layout_below="@+id/primaverano"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:background="#ff000000"
                    android:id="@+id/invierno"
                    android:focusableInTouchMode="false"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/relativeLayout">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="OPCION
2"
                            android:id="@+id/otoÃ±oinvierno"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:singleLine="false"
                            android:textColor="#ffffffff"
                            android:textAlignment="gravity"
                            android:linksClickable="false"
                            android:lines="2"
                            android:password="false"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:textIsSelectable="false" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/home_flecha2"
                        android:src="@drawable/home_flecha"
                        android:layout_below="@+id/relativeLayout"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp" />
                </RelativeLayout>
            </LinearLayout>
            </RelativeLayout>
    </android.support.v4.view.ViewPager>
        </RelativeLayout>